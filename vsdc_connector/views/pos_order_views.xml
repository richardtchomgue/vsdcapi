<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_pos_form_ext" model="ir.ui.view">
            <field name="name">pos.order.form</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="priority">100</field>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='refund']" position="replace">
                    <button name="refund" string="Return Products" type="object"
                            attrs="{'invisible':[('state','=','draft')]}" groups="account.group_account_user" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record id="pos_payment_method_form" model="ir.ui.view">
            <field name="name">pos.payment.method.vsdc.form</field>
            <field name="model">pos.payment.method</field>
            <field name="inherit_id" ref="point_of_sale.pos_payment_method_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="vsdc_payment_method_id" required="1"/>
                </xpath>
            </field>
        </record>

        <record id="vsdc_payment_method_tree" model="ir.ui.view">
            <field name="name">vsdc.payment.method.tree</field>
            <field name="model">vsdc.payment.method</field>
            <field name="arch" type="xml">
                <tree string="Payment Method" create="0" editable="bottom">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="active"/>
                    <field name="user_defined_code1"/>
                    <field name="user_defined_code2"/>
                    <field name="user_defined_code3"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_vsdc_payment_method">
            <field name="name">VSDC Payment Methods</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">vsdc.payment.method</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="menu_pos_vsdc" name="VSDC" parent="point_of_sale.menu_point_config_product" sequence="500"/>
        <menuitem id="menu_vsdc_payment_method" name="VSDC Payment Methods" parent="menu_pos_vsdc"
                  action="action_vsdc_payment_method"/>

    </data>
</odoo>