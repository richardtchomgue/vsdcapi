<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="custom-invoice-header">
            <div class="header">
                <div class="row">
                    <div class="col-3 mb4">
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 100px;" alt="Logo"/>
                    </div>
                    <div class="col-9 text-right" t-if="o.move_type in ('out_invoice','out_refund')">
                        <img src="/vsdc_connector/static/src/img/rra-logo.png" alt="" style="max-height: 80px;margin-right:20px" class="rra-logo"/>
                        <img src="/vsdc_connector/static/src/img/rra-logo2.jpeg" alt="" style="max-height: 80px;" class="rra-logo"/>
                    </div>
                </div><br/>
                <!--                <div style="border-bottom: 1px solid black;"/>-->
                <div class="row">
                    <div class="col-6" name="company_address">
                        <div t-field="company.partner_id"
                             t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'
                        />
                    </div>
                </div>
            </div>
        </template>
        <template id="custom-invoice-footer">
            <div class="footer o_standard_footer">
                <div class="text-center" style="border-top: 1px solid black;">
                    <ul class="list-inline mb4">
                        <!-- using the list-inline-item class from bootstrap causes weird behaviours in pdf report
                             adding d-inline class fixes the problem-->
                        <li t-if="company.phone" class="list-inline-item d-inline">Phone: <span class="o_force_ltr" t-field="company.phone"/></li>
                        <li t-if="company.email" class="list-inline-item d-inline">Email: <span t-field="company.email"/></li>
                        <li t-if="company.website" class="list-inline-item d-inline">Web: <span t-field="company.website"/></li>
                        <li t-if="company.vat" class="list-inline-item d-inline"><t t-esc="company.country_id.vat_label or 'Tax ID'"/>: <span t-field="company.vat"/></li>
                    </ul>

                    <div name="financial_infos">
                        <span t-field="company.report_footer"/>
                    </div>

                    <div class="text-muted">
<!--                        <p class="text-center">ODOO TMR EDITION V<t t-esc="o.cis_version[5:8]"/></p>-->
                        <t t-if="report_type == 'pdf'">
                            <p class="text-center">Page: <span class="page"/> / <span class="topage"/></p>
                        </t>
                    </div>
                </div>
            </div>
        </template>
        <template id="report_invoice_document" inherit_id="account.report_invoice_document">
            <xpath expr="." position="replace">
                <t t-call="web.basic_layout">
                    <t t-call="vsdc_connector.custom-invoice-header">
                        <t t-set="company" t-value="o.company_id"/>
                        <t t-set="o" t-value="o"/>
                    </t>
                    <t t-call="web.address_layout">
                        <t t-set="address">
                            <address t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                            <div t-if="o.partner_id.vat" class="mt16">
                                <t t-if="o.company_id.country_id.vat_label" t-esc="o.company_id.country_id.vat_label" id="inv_tax_id_label"/>
                                <t t-else="">Tax ID</t>: <span t-field="o.partner_id.vat"/></div>
                        </t>
                    </t>
                    <div class="page">
                        <p t-if="o.training"><strong>TRAINING MODE</strong></p>
                        <p t-if="o.invoice_printed and not o.training"><strong>COPY</strong></p>
                        <p style="text-transform:uppercase">
                            <strong>
                                <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Invoice</span>
                                <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                                <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                                <span t-if="o.move_type == 'out_refund'">REFUND</span>
                                <span t-if="o.move_type == 'in_refund'">Vendor Credit Note</span>
                                <span t-if="o.move_type == 'in_invoice'">Vendor Bill</span><br/>
                            </strong>
                        </p>
                        <h2 t-if="o.name != '/'"><span t-field="o.name"/></h2>

                        <div id="informations" class="row mt32 mb32">
                            <div class="col-auto mw-100 mb-2" t-if="o.move_type == 'out_refund' and o.reversed_entry_id" name="reference">

                                <strong>REF. NORMAL RECEIPT#:</strong>
                                <span class="m-0" t-field="o.reversed_entry_id.receipt_number"/>
                                <p></p>
                            </div>
                            <div class="col-auto mw-100 mb-2" t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'" name="due_date">
                                <strong>Due Date:</strong>
                                <span class="m-0" t-field="o.invoice_date_due"/>
                            </div>
                            <div class="col-auto mw-100 mb-2" t-if="o.partner_id.ref" name="customer_code">
                                <strong>Customer Code:</strong>
                                <span class="m-0" t-field="o.partner_id.ref"/>
                            </div>
                            <!--                            <div class="col-auto mw-100 mb-2" t-if="o.invoice_origin" name="origin">-->
                            <!--                                <strong>Source:</strong>-->
                            <!--                                <p class="m-0" t-field="o.invoice_origin"/>-->
                            <!--                            </div>-->
                        </div>
                        <p t-if="o.move_type == 'out_refund' and o.reversed_entry_id">
                            REFUND IS APPROVED ONLY FOR ORIGINAL SALES RECEIPT
                        </p>

                        <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>

                        <table class="table table-sm o_main_table" name="invoice_line_table">
                            <thead>
                                <tr>
                                    <!-- TODO: remove in master -->
                                    <t t-set="colspan" t-value="6"/>
                                    <th name="th_description" class="text-left">
                                        <span>Description</span>
                                    </th>
                                    <!-- TODO: remove in master -->
                                    <th name="th_source" class="d-none text-left" t-if="0"><span>Source Document</span></th>
                                    <th name="th_quantity" class="text-center"><span>Quantity</span></th>
                                    <th name="th_taxes" t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Taxes</span></th>
                                    <th name="th_priceunit" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Unit Price</span></th>
                                    <th name="th_price_unit" t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                        <span>Disc.%</span>
                                        <!-- TODO: remove in master -->
                                        <t t-set="colspan" t-value="colspan+1"/>
                                    </th>
                                    <th name="th_subtotal" class="text-right">
                                        <span>Total Price</span>
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="invoice_tbody">
                                <t t-set="current_subtotal" t-value="0"/>
                                <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                                <t t-foreach="lines" t-as="line">
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                    <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                            <td name="account_invoice_line_name"><span t-field="line.name" t-options="{'widget': 'text'}"/></td>
                                            <td class="text-center">
                                                <span t-esc="'%.0f'% line.quantity"/>
                                                <span t-field="line.product_uom_id"  groups="uom.group_uom"/>
                                            </td>
                                            <td t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids"/>
                                            </td>
                                            <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span class="text-nowrap" t-esc="line.price_unit * o.factor"/>
                                            </td>
                                            <td t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                                <span class="text-nowrap" t-field="line.discount"/>
                                            </td>
                                            <td class="text-right o_price_total">
                                                <span class="text-nowrap" t-esc="line.price_total * o.factor"/>
                                            </td>
                                        </t>
                                        <t t-if="line.display_type == 'line_section'">
                                            <td colspan="99">
                                                <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                            </td>
                                            <t t-set="current_section" t-value="line"/>
                                            <t t-set="current_subtotal" t-value="0"/>
                                        </t>
                                        <t t-if="line.display_type == 'line_note'">
                                            <td colspan="99">
                                                <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <div class="clearfix">
                            <div id="total" class="row">
                                <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                                    <p t-if="o.training or o.invoice_printed"><strong>THIS IS NOT AN OFFICIAL RECEIPT</strong></p>
                                    <table class="table table-sm" style="page-break-inside: avoid;">
                                        <tr class="border-black o_subtotal" style="">
                                            <td><strong>Total</strong></td>
                                            <td class="text-right">
                                                <strong> <span t-esc="o.amount_total * o.factor" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></strong>
                                            </td>
                                        </tr>
                                        <t t-foreach="o.tax_amounts" t-as="tax_cat">
                                            <tr>
                                                <td><span class="text-nowrap" t-esc="tax_cat[0]"/></td>
                                                <td class="text-right o_price_total">
                                                    <span class="text-nowrap" t-esc="float(tax_cat[1]) * o.factor" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                </td>
                                            </tr>
                                        </t>
                                        <tr>
                                            <td><span class="text-nowrap"/>Total Tax</td>
                                            <td class="text-right o_price_total">
                                                <span class="text-nowrap" t-esc="o.amount_tax * o.factor" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                        </tr>
                                        <!--Payments-->

                                        <t t-if="print_with_payments">
                                            <t t-if="o.payment_state != 'invoicing_legacy'">
                                                <t t-set="payments_vals" t-value="o.sudo()._get_reconciled_info_JSON_values()"/>
                                                <t t-foreach="payments_vals" t-as="payment_vals">
                                                    <tr>
                                                        <td>
                                                            <i class="oe_form_field text-right oe_payment_label">Paid on <t t-esc="payment_vals['date']" t-options='{"widget": "date"}'/></i>
                                                        </td>
                                                        <td class="text-right">
                                                            <span t-esc="payment_vals['amount'] * o.factor" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                        </td>
                                                    </tr>
                                                </t>
                                                <t t-if="len(payments_vals) > 0">
                                                    <tr>
                                                        <td><strong>Amount Due</strong></td>
                                                        <td class="text-right">
                                                            <strong><span t-esc="o.amount_residual * o.factor"/></strong>
                                                        </td>
                                                    </tr>
                                                </t>
                                            </t>
                                        </t>
                                        <tr class="border-black o_total">
                                            <td></td>
                                            <td class="text-right"></td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div style="page-break-after: always; margin-top: 10px; "/>
                        <div t-if="o.move_type in ('out_invoice','out_refund') and o.state == 'posted' and o.stamp" class="my-4">
                            <p t-if="o.invoice_printed and not o.training"><strong>COPY</strong></p>
                            <p t-if="o.training"><strong>TRAINING MODE</strong></p>
                            <div class="sdc-info">
                                <div class="row">
                                    <div class="col-8 pb-0">
                                        <h5 class="mb-2">SDC INFORMATION</h5>
                                        <div class="py-0">
                                            <div class="row" t-if="o.stamp.date and o.stamp.time">
                                                <div class="col-4"><strong>Date:</strong><![CDATA[&nbsp;]]> <t t-esc='o.stamp.date'/></div>
                                                <div class="col-1 p-0" style="max-width:1rem"> </div>
                                                <div class="col-7"><strong>Time:</strong><![CDATA[&nbsp;]]><t t-esc='o.stamp.time'/></div>
                                            </div>
                                            <div class="row"  t-if="o.stamp.s_number">
                                                <div class="col-4"><strong>SDC ID</strong></div>
                                                <div class="col-1 p-0" style="max-width:1rem">:</div>
                                                <div class="col-7"><t t-esc='o.stamp.s_number'/></div>
                                            </div>
                                            <div class="row"  t-if="o.stamp.r_number and o.stamp.g_number">
                                                <div class="col-4"><strong> VSDC RECEIPT NUMBER</strong></div>
                                                <div class="col-1 p-0" style="max-width:1rem">:</div>
                                                <div class="col-7"><t t-esc='o.sdc_receipt_number'/></div>
                                            </div>
                                            <!--                                            <t t-if="'N' in o.stamp.r_label and not o.invoice_printed">-->
                                            <div class="row">
                                                <div class="col-4"> <strong>Internal Data</strong></div>
                                                <div class="col-1 p-0" style="max-width:1rem">:</div>
                                                <div class="col-7"><t t-esc="o.stamp.dashed_internal_data"/></div>
                                            </div>
                                            <div class="row">
                                                <div class="col-4"><strong>Receipt Signature</strong></div>
                                                <div class="col-1 p-0" style="max-width:1rem">:</div>
                                                <div class="col-7">
                                                    <t t-esc="o.stamp.dashed_signature"/>
                                                    <div class="mt-4">
                                                        <span t-field="o.stamp.qr_code" t-options="{'widget':'image'}"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <!--                                            </t>-->
                                        </div>
                                        <br/>
                                        <div class="row">
                                            <div class="col-4"><strong>RECEIPT NUMBER</strong></div>
                                            <div class="col-1 p-0" style="max-width:1rem">:</div>
                                            <div class="col-7"><t t-esc="o.receipt_number"/></div>
                                        </div>
                                        <div class="row">
                                            <div class="col-4"><strong>Date</strong></div>
                                            <div class="col-1 p-0" style="max-width:1rem">:</div>
                                            <div class="col-7">
                                                <t t-esc="datetime.datetime.strftime(o.get_receipt_time(),'%d/%m/%Y')"/><![CDATA[&nbsp;]]><![CDATA[&nbsp;]]>
                                                <![CDATA[&nbsp;]]><![CDATA[&nbsp;]]><![CDATA[&nbsp;]]>
                                                <t t-esc="datetime.datetime.strftime(o.get_receipt_time(),'%H:%M:%S')"/>
                                            </div>
                                        </div>
                                        <div class="row"  t-if="o.create_uid.mrc">
                                            <div class="col-4"><strong>MRC:</strong></div>
                                            <div class="col-1 p-0" style="max-width:1rem">:</div>
                                            <div class="col-7"><t t-esc='o.create_uid.mrc'/></div>
                                        </div>
                                        <div/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <p t-if="o.move_type in ('out_invoice', 'in_refund') and o.payment_reference and o.amount_residual" name="payment_communication">
                            Please use the following communication for your payment : <b><span t-field="o.payment_reference"/></b>
                        </p>
                        <p t-if="o.invoice_payment_term_id" name="payment_term">
                            <span t-field="o.invoice_payment_term_id.note"/>
                        </p>
                        <div t-if="not is_html_empty(o.narration)" name="comment">
                            <span t-field="o.narration"/>
                        </div>
                        <p t-if="not is_html_empty(o.fiscal_position_id.note)" name="note">
                            <span t-field="o.fiscal_position_id.note"/>
                        </p>
                        <p t-if="o.invoice_incoterm_id" name="incoterm">
                            <strong>Incoterm: </strong><span t-field="o.invoice_incoterm_id.code"/> - <span t-field="o.invoice_incoterm_id.name"/>
                        </p>
                        <div id="qrcode" t-if="o.display_qr_code and o.amount_residual > 0">
                            <p t-if="qr_code_urls.get(o.id)">
                                <strong class="text-center">Scan me with your banking app.</strong><br/><br/>
                                <img class="border border-dark rounded" t-att-src="qr_code_urls[o.id]"/>
                            </p>
                        </div>
                    </div>
                    <t t-call="vsdc_connector.custom-invoice-footer">
                        <t t-set="company" t-value="o.company_id"/>
                    </t>
                </t>
            </xpath>
        </template>

        <record id="paperformat_invoice" model="report.paperformat">
            <field name="name">European A4</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">65</field>
            <field name="margin_left">5</field>
            <field name="margin_right">5</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">60</field>
            <field name="dpi">90</field>
        </record>
        <record id="account.account_invoices" model="ir.actions.report">
            <field name="paperformat_id" ref="vsdc_connector.paperformat_invoice"/>
        </record>
    </data>
</odoo>