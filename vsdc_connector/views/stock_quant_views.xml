<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_quant_tree_inventory_editable" model="ir.ui.view">
        <field name="name">view_stock_quant_tree_inventory_editable.inherit.vsdc</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_inventory_editable"/>
        <field name="arch" type="xml">

            <xpath expr="//button[@name='action_set_inventory_quantity_to_zero']" position="after">
                <field name="is_synced" invisible="1"/>
                <field name="adjustment_note" optional="show"/>
                <button name="action_view_vsdc_data" type="object" string="VSDC" class="btn btn-primary" attrs="{'invisible': [('is_synced', '=', False)]}"/>
            </xpath>

        </field>
    </record>
</odoo>
